<robot name="create_robot">
    <link name="base_footprint">
        <visual>
            <geometry>
                <sphere radius="0.00001"/>
            </geometry>
        </visual>
    </link>
    <link name="base_link">
        <visual>
	    	<geometry>
				<cylinder radius="0.1" length="0.08"/>
			</geometry>
			<origin xyz="0 0 0" rpy="0 0 0"/>
			<material name="base_link_color">
				<color rgba="1 1 0.1 0.5"/>
			</material>
	    </visual>
	    <collision>
	    	<geometry>
				<cylinder radius="0.1" length="0.08"/>
			</geometry>
			<origin xyz="0 0 0" rpy="0 0 0"/>
	    </collision>
	    <inertial>
	        <origin xyz="0 0 0"/>
	        <mass value="1"/>
	        <inertia ixx="1" ixy="1" ixz="1" iyy="1" iyz="1" izz="1"/>
	    </inertial>
    </link>
    <joint name="baseToFootprint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.055" rpy="0 0 0"/>
    </joint>
    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.015"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="left_wheel_color">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.015"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
        </collision>
	    <inertial>
	        <origin xyz="0 0 0"/>
	        <mass value="0.2"/>
	        <inertia ixx="1" ixy="1" ixz="1" iyy="1" iyz="1" izz="1"/>
	    </inertial>
    </link>
    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.0325" length="0.015"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
            <material name="left_wheel_color">
                <color rgba="0 0 0 1"/>
            </material>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.0325" length="0.015"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.57 0 0"/>
        </collision>
	    <inertial>
	        <origin xyz="0 0 0"/>
	        <mass value="0.2"/>
	        <inertia ixx="1" ixy="1" ixz="1" iyy="1" iyz="1" izz="1"/>
	    </inertial>
    </link>
    <joint name="left_wheelToBase" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.1 -0.0225" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <joint name="right_wheelToBase" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0 -0.1 -0.0225" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
    </joint>
    <gazebo reference="base_link">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="right_link">
        <material>Gazebo/Black</material>
    </gazebo>
    <gazebo reference="left_link">
        <material>Gazebo/Black</material>
    </gazebo>
</robot>
